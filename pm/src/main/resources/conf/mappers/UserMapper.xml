<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pspm.mapper.UserMapper">

 	<resultMap type="com.pspm.entity.PmUser" id="userBasicInfo">
        <id property="userId" column="USER_ID"/>  
    	<result property="loginPwd" column="LOGIN_PWD"/> 
    	<result property="salt" column="SALT"/> 
    	<result property="userName" column="USER_NAME"/> 
    	<result property="gender" column="GENDER"/> 
    	<result property="userType" column="TYPE_CD" typeHandler="com.amep.entity.handler.EnumUserTypeHandler"/> 
    	<result property="email" column="EMAIL"/> 
    	<result property="tel" column="TEL"/> 
    	<result property="birthDay" column="BIRTHDAY"/> 
    	<result property="avatarImgUrl" column="AVATAR_IMG_URL"/>
    	<result property="status" column="STATUS_CD" typeHandler="com.amep.entity.handler.EnumUserStatusHandler"/> 
    	<result property="createTs" column="CRETE_TS"/>
    	<association property="org" column="ORG_ID" select="com.amep.mapper.OrgnizationMapper.selectOrgById"></association>
    	<association property="topOrg" column="TOP_ORG_ID" select="com.amep.mapper.OrgnizationMapper.selectOrgById"></association>
    </resultMap>
    
    <select id="loginUser" parameterType="map" resultMap="userBasicInfo">
    	
    </select>
</mapper>
